{
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.fontFamily": "'Liberation Mono', 'monospace', monospace, 'Droid Sans Fallback'",


    "vim.handleKeys": {
        "<C-b>": false
    },

    "vim.leader": "<space>",

    "vim.insertModeKeyBindings": [
        { "before": ["j", "k"], "after": ["<Esc>"] }
    ],

    "vim.normalModeKeyBindingsNonRecursive": [

        { "before": ["<C-h>"], "after": ["<C-w>", "h"] },
        { "before": ["<C-j>"], "after": ["<C-w>", "j"] },
        { "before": ["<C-k>"], "after": ["<C-w>", "k"] },
        { "before": ["<C-l>"], "after": ["<C-w>", "l"] },
        { "before": ["<leader>", ";"], "after": ["g", "c", "c", "j"] },
        { "before": ["<leader>", "["], "commands": ["workbench.action.previousEditor"] },
        { "before": ["<leader>", "]"], "commands": ["workbench.action.nextEditor"] },
        { "before": ["<leader>", "i"], "commands": ["editor.action.showHover"] },
        { "before": ["<leader>", "m", "m"], "commands": ["editor.action.toggleMinimap"] },
        { "before": ["<leader>", "q"], "commands": [ "workbench.action.files.saveAll", "workbench.action.closeWindow" ] },
        { "before": ["<leader>", "w"], "commands": ["workbench.action.files.saveAll"] }

    ],
    "terminal.integrated.allowChords": false,
    "editor.rulers": [
        80,
        120
    ],
    "editor.minimap.enabled": false,
    "java.project.importOnFirstTimeStartup": "automatic",
    "javaTests.template.junitDefaultVersion": "alwaysAsk",
    "files.autoSave": "afterDelay"
}
