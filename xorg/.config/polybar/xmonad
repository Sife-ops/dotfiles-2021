;==== Module Definitions ==================================

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[global/wm]
margin-top = 0
margin-bottom = 0

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_


[module/xmonad]
type = custom/script
exec = xmonad-log
tail = true

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/date]
type = internal/date
interval = 1

date = "%a, %b %d,"
time = %H:%M

format = <label>
format-foreground = ${colors.foreground}
format-padding = 1

label = %{T2}â°%{T-}%date% %time%

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/cpu]
type = internal/cpu
interval = 2

format = <label>
format-foreground = ${colors.foreground}
format-padding = 1

label = %{T2}ğŸ’»%{T-}%percentage%%

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/temp]
